generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String   @id @default(uuid())
  tableNo       String?
  sessionId     String?
  items         String
  total         Float
  status        String
  paymentMethod String?  @default("CASH")
  paymentStatus String   @default("PENDING")
  transactionId String?
  createdAt     DateTime @default(now())
  customerPhone String?
  deviceName    String?
  isOnlineOrder Boolean  @default(false)
  location      String?
}



model Review {
  id        String   @id @default(uuid())
  name      String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
}

model Category {
  id        String     @id @default(uuid())
  nameEn    String
  nameNp    String
  menuItems MenuItem[]
}

model MenuItem {
  id          String   @id @default(uuid())
  nameEn      String
  nameNp      String
  description String?
  price       Float
  image       String?
  isAvailable Boolean  @default(true)
  categoryId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
}


model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   @default("STAFF")
  displayName String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  
  // Location Tracking
  lat       Float?
  lng       Float?
  lastActiveAt DateTime?
  serviceRequests ServiceRequest[]
}

model BlockedDevice {
  id        String   @id @default(uuid())
  deviceId  String   @unique
  reason    String?
  createdAt DateTime @default(now())
}

model ServiceRequest {
  id              String   @id @default(uuid())
  tableNo         String
  type            String
  status          String
  createdAt       DateTime @default(now())
  
  // Smart Waiter
  userLat         Float?
  userLng         Float?
  assignedToUser  User?    @relation(fields: [assignedToUserId], references: [id])
  assignedToUserId String?
  
  // Voice Order
  audioData       String? // Base64 encoded audio
}

model Table {
  id               String    @id @default(uuid())
  number           String    @unique
  status           String    @default("CLOSED")
  currentSessionId String?
  deviceId         String?
  sessionStartedAt DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @default(now()) @updatedAt
}

model DeviceStats {
  id          String   @id @default(uuid())
  deviceId    String   @unique
  totalVisits Int      @default(0)
  totalSpend  Float    @default(0)
  tier        String   @default("BRONZE") // BRONZE, SILVER, GOLD, PLATINUM, DIAMOND
  lastVisit   DateTime @default(now())
  badges      String?  // JSON string of badges e.g. ["Momo Master", "Early Bird"]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model Reward {
  id          String   @id @default(uuid())
  name        String
  description String?
  cost        Float    // Spend threshold required to unlock
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model SiteSettings {
  id                      String   @id @default("global")
  cafeName                String   @default("Cafe Delight")
  cafeTagline             String   @default("Authentic Flavors")
  cafeNameNp              String   @default("क्याफे डिलाइट")
  cafeTaglineNp           String   @default("अनिवार्य स्वाद")
  heroImage               String   @default("/images/momo-buff.png")
  logoImage               String?
  openHours               String   @default("10am - 10pm")
  location                String   @default("Lakeside, Pokhara")
  phone                   String?
  
  // Daily Special
  showDailySpecial        Boolean  @default(false)
  dailySpecialTitle       String?
  dailySpecialDescription String?
  dailySpecialImage       String?
  
  updatedAt               DateTime @default(now()) @updatedAt
}
