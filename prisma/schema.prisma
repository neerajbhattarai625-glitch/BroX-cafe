generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id            String   @id @default(uuid())
  tableNo       String?
  sessionId     String?
  items         String
  total         Float
  status        String
  paymentMethod String?  @default("CASH")
  paymentStatus String   @default("PENDING")
  transactionId String?
  deviceName    String?  // NEW: Track device name
  location      String?  // NEW: Track geolocation
  isOnlineOrder Boolean  @default(false) // NEW: Distinguish guest orders
  customerPhone String?  // NEW: Contact info for pickup
  createdAt     DateTime @default(now())
}

model ServiceRequest {
  id        String   @id @default(uuid())
  tableNo   String
  type      String
  status    String
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  name      String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
}

model Category {
  id        String     @id @default(uuid())
  nameEn    String
  nameNp    String
  menuItems MenuItem[]
}

model MenuItem {
  id          String   @id @default(uuid())
  nameEn      String
  nameNp      String
  description String?
  price       Float
  image       String?
  isAvailable Boolean  @default(true)
  categoryId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  category    Category @relation(fields: [categoryId], references: [id])
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   @default("STAFF")
  createdAt DateTime @default(now())
}

model Table {
  id               String    @id @default(uuid())
  number           String    @unique
  status           String    @default("CLOSED")
  currentSessionId String?
  deviceId         String?
  sessionStartedAt DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}
