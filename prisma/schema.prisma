generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  tableNo   String
  items     String
  total     Float
  status    String
  createdAt DateTime @default(now())
}

model ServiceRequest {
  id        String   @id @default(uuid())
  tableNo   String
  type      String
  status    String
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  name      String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
}

model Category {
  id        String     @id @default(uuid())
  nameEn    String
  nameNp    String
  menuItems MenuItem[]
}

model MenuItem {
  id          String   @id @default(uuid())
  nameEn      String
  nameNp      String
  description String?
  price       Float
  image       String?
  isAvailable Boolean  @default(true)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   @default("STAFF") // ADMIN, STAFF
  createdAt DateTime @default(now())
}

model Table {
  id               String   @id @default(uuid())
  number           String   @unique
  status           String   @default("CLOSED") // OPEN, CLOSED
  currentSessionId String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
